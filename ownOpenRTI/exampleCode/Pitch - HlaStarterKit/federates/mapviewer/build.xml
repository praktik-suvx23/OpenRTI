<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="MapViewer" default="MapViewerJar">

    <property environment="env"/>
    <property name="jdk.home.1.8" value="${env.JDK18_HOME}" />
    <property name="src_dir" value="src"/>
    <property name="build_dir" value="build"/>
    <property name="dist_dir" value="dist"/>
	<property name="rti.jar" value="${env.PRTI1516E_HOME}/lib/prti1516e.jar" />

    <path id="classpath">
        <pathelement location="${rti.jar}"/>
    </path>

    <target name="init">
        <mkdir dir="${build_dir}"/>
    </target>

    <target name="compile" depends="init">
        <javac srcdir="${src_dir}" destdir="${build_dir}" classpathref="classpath" />
    </target>

    <target name="MapViewerJar" depends="compile">
        <mkdir dir="${dist_dir}"/>

        <jar jarfile="${dist_dir}/mapviewer.jar" basedir="${build_dir}">
            <fileset dir="${src_dir}"/>
        </jar>
    </target>

    <target name="clean">
        <delete dir="${build_dir}"/>
        <delete dir="${dist_dir}"/>
    </target>
</project>